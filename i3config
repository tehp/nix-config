# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 $foreground #6272A4   $orange
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   $comment
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   $comment
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       $background

bar {
  status_command i3status
  colors {
    background $background
    statusline $comment
    separator  $window
    focused_workspace  $background $orange $background
    active_workspace   $orange $background $red
    inactive_workspace #282A36 #282A36 #BFBFBF
    urgent_workspace   #FF5555 #FF5555 #F8F8F2
    binding_mode       #FF5555 #FF5555 #F8F8F2
  }
}

